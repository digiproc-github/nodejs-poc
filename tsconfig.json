{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "Node16",
    "target": "ES2022",
    "sourceMap": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "build",
    "rootDir": ".",
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"]
    }
  }
}
